		<module>common-utils</module>
		<module>common-lib</module>
		<module>common-amx</module>
		<module>lib-ext-jar</module>
		<module>lib-db</module>
		<module>lib-mcq</module>
		<module>lib-monitor</module>
		<module>lib-auth</module>
		<module>lib-sso</module>


		<module>ms-logger</module>
		<module>lib-postman</module>
		<module>ms-postman</module>

		<module>amx-lib</module>
		<module>core</module>
		<module>ms-meta</module>
		<module>ms-user</module>
		<module>ms-exchangerate</module>
		<module>ms-jax</module>
		<module>jax-client</module>
		<module>ms-auth</module>

		<module>ms-scheduler</module>

		<module>server-payg</module>

		<module>server-ui</module>
